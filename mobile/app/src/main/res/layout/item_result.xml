<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primaryTextColor"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_coral_result"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="16dp" />

        <TextView
            android:id="@+id/text_coral_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/hard_coral"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.Coral_ID.Card"
            android:textColor="@color/primaryColor"
            android:textSize="12sp"
            android:letterSpacing="-0.05"
            app:layout_constraintStart_toEndOf="@+id/image_coral_result"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_coral_full_name_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/acropora_brueggemanni"
            android:textAppearance="@style/TextAppearance.Coral_ID.Card"
            android:textSize="13sp"
            android:letterSpacing="-0.05"
            app:layout_constraintStart_toEndOf="@+id/image_coral_result"
            app:layout_constraintTop_toBottomOf="@+id/text_coral_type" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>